<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sun.fastdelivery.view.user.OrderDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/top_bar"/>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已创建"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:paddingTop="10dp"
                />

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号：13434"
                android:textSize="10sp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/color_cut_line"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="寄件信息"
                android:background="@color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvSendLocationInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:maxLines="2"
                android:layout_marginTop="1dp"
                />

            <TextView
                android:id="@+id/tvSendContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系人："
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:background="@color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/color_cut_line"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收件信息"
                android:background="@color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvReceiveLocationInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:maxLines="2"
                android:layout_marginTop="1dp"
                />

            <TextView
                android:id="@+id/tvReceiveContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系人："
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:background="@color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="物品信息"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="1dp">

                <ImageView
                    android:id="@+id/ivType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cake"
                    android:background="@drawable/blue_oval_border"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="类型：--"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tvGoodWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重量：--"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注信息"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/tvPayWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付方式：--"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/tvTools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="配送方式：--"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvArrivePlaces"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

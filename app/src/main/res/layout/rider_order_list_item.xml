<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_gary_press_selector">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3月16日-鲜花"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayE"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send_icon"
            android:background="@drawable/gray_border"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/icon"
            android:layout_toLeftOf="@+id/tvArrivePlace"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tvSendInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="寄件：华师"
                android:textSize="12sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/tvReceiveInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件：华师"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvArrivePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到达站点1"
            android:drawablePadding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:drawableRight="@drawable/go"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/color_cut_line"
        android:scaleType="fitXY"/>


</LinearLayout>